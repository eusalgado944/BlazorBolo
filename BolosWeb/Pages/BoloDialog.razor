@using MudBlazor

@using BolosModel.Entities

<MudDialog MaxWidth="MaxWidth.Small">
    <TitleContent>
        @bolo.Nome
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">@bolo.Descricao</MudText>
        <MudText Typo="Typo.subtitle2" Color="Color.Secondary" Class="mt-2">Preço: R$ @bolo.Valor.ToString("F2")</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="() => MudDialogInstance.Close()">Fechar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialogInstance { get; set; }

    [Parameter] public Bolo bolo { get; set; } = new Bolo();
}
